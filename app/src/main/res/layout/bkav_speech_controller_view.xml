<?xml version="1.0" encoding="utf-8"?>
<bkav.android.speech.SpeechControlLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bkav_speech_controller_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <SeekBar
            android:id="@+id/bkav_speech_controller_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:progressTint="#FF3F19"
            android:thumbTint="#FF3F19" />

        <TextView
            android:id="@+id/bkav_speech_controller_show_time_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bkav_speech_controller_play_btn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_action_play"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/bkav_speech_controller_replay_btn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_action_replay"
        tools:ignore="ContentDescription" />

</bkav.android.speech.SpeechControlLayout>
